<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mota.myapplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="0dp"
        tools:setOrientation="vertical">


        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_alignParentTop="true"

            android:background="@android:color/holo_green_light"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="326dp"
            android:layout_height="64dp"
            android:layout_alignTop="@id/descriptionTextView"
            android:background="@color/colorAccent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="112dp" />


        <TextView
            android:id="@+id/idTextView"
            android:layout_width="338dp"
            android:layout_height="59dp"
            android:layout_alignTop="@id/nameTextView"

            android:background="@android:color/holo_orange_light"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="176dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="343dp"
            android:layout_height="233dp"
            android:layout_alignTop="@id/idTextView"

            tools:layout_editor_absoluteX="0dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
